function [functionValue] = Polynomial(polynomialCoefficients, x)
%POLYNOMIAL Evaluate polynomial.
%   y = POLYNOMIAL(P,x) returns the value of a polynomial P evaluated at x.
%   P is a vector of length N+1 containing the polynomial coefficients in
%   ascending order.

% Check for errors
if nargin < 2 || ~isreal(polynomialCoefficients) || ~isreal(x)
  fprintf('ERROR in function Polynomial.m : not enough input arguments or in.\n');
  functionValue = [];
  return
elseif 
  fprintf('ERROR in function Polynomial.m : invalid input argument.\n');
  functionValue = [];
  return
end

nCoefficients = length(polynomialCoefficients);
functionValue = zeros(size(x));

for ii = 1:length(x)
  for jj = 1:nCoefficients
    functionValue(ii) = functionValue(ii) + polynomialCoefficients(jj)*x(ii).^(jj-1);
  end
end

end

